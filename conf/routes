# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST     /                           controllers.Application.index()
POST    /login                      controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()

##new user
POST	/newUser					controllers.Application.newUser()
POST	/login/create				controllers.Application.createUser()

##home
POST	/home				      	controllers.Application.getHome()
GET		/home				      	controllers.Application.getHome()
POST	/home/getuser		      	controllers.Application.getUser()
POST	/home/getresult		      	controllers.Application.getResult()
GET		/home/getresult		      	controllers.Application.getResult()
GET		/home/gethistory	      	controllers.Application.getHistory()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
